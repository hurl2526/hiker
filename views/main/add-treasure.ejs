<p>add treasure here</p>

<div>
  <form role="form" method="POST" action="/api/trails/add-treasure/<%= id %>/<%= lat %>/<%= lon %>">
    <fieldset>
      <hr class="colorgraph" />

      <div class="form-group">
        <input
          type="name"
          name="name"
          id="name"
          class="form-control input-lg"
          placeholder="Name of Treasure"
        />
      </div>
      <div class="form-group">
        <input
          type="description"
          name="description"
          id="description"
          class="form-control input-lg"
          placeholder="description of treasure"
        />
      </div>
      <hr class="colorgraph" />
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <input
            type="submit"
            class="btn btn-lg btn-primary btn-block"
            value="Add Treasure"
          />
        </div>
      </div>
    </fieldset>
  </form>
</div>
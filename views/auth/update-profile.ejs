  </head>
    <title>Profile-Online Shopper</title>
  </head>
  <body>
    <nav
        class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar"style=
        "background-color: #24355c;"
      >
        <div class="container" style=
        "background-color: #24355c;">
          <!-- Navbar brand -->
          <img
            src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ft3.ftcdn.net%2Fjpg%2F01%2F84%2F96%2F50%2F240_F_184965071_k6Y8NOQ1NmxYNok4oTlm4GHjnDAFGPtq.jpg&f=1&nofb=1"
            alt="TH logo"
            style="width: 2em; height: 2em; border-radius: 50%;"
            ;
            <!--
            Collapse
            button
            --
          />
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#basicExampleNav"
            aria-controls="basicExampleNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>

          <!-- Collapsible content -->
          <div class="collapse navbar-collapse" id="basicExampleNav">
            <!-- Links -->
            <ul class="navbar-nav mr-auto smooth-scroll">
              <li class="nav-item">
                <a class="nav-link" href="/api/users">Home/Search</a>
              </li>
            </ul>
            <!-- Links -->

            <!-- Social Icon  -->
            <ul class="navbar-nav nav-flex-icons">
              <li class="nav-item">
                <a class="nav-link" style="color:orangered;"href="/api/users/profile"><%=user.profile.name.toUpperCase()%></a>
              </li>
              <li class="nav-item">
                  <a
                  class="nav-link"
                    href="/api/fav">
                    <i
                    style="color:orangered;""
                      class="fa fa-shopping-cart"
                    ></i>
                  </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
          <!-- Collapsible content -->
        </div>
      </nav>
    <div class="container" style="margin-top:6em">
      <div class="row">
        <div
          class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 my-form"
        >
          <% if (errors.length) { %>
         <div class="alert alert-danger alert-dismissable">
            <button
              type="button"
              class="close"
              data-dismiss="alert"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
            <%= errors %> 
          </div>
          <% } %>
          <form role="form" method="POST" action="/api/users/update-profile?_method=PUT">
            <fieldset>
              <h2>
                Update Profile:
              </h2>
              <hr class="colorgraph" />
              <br />
              <img class="profile-imageholder" src ="/images/profile-imageholder2.jpeg" />
              <div class="form-group">
              <br />
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control input-lg"
                  value= "<%=user.profile.name%>"
                />
              </div>
              <div class="form-group">
              <br />
                <input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control input-lg"
                  value = "<%=user.email%>"
                />
              </div>
              <div class="form-group">
                <input
                  type="text"
                  name="address"
                  id="address"
                  class="form-control input-lg"
                  value="<%=user.address%>"
                />
              </div>
              <hr class="colorgraph" />
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <input
                    type="submit"
                    class="btn btn-lg btn-primary btn-block"
                    value="Update"
                  />
                </div>
              </div>
            </fieldset>
          </form>
          <hr class="colorgraph" />
          <div style="margin-top:30px">
            <form role="form" method="POST" action="/api/users/update-password?_method=PUT">
            <h5>Change Password</h5>
          <fieldset>
            <div class = "form-group">
      
              <input type="password" name="oldPassword" id="oldPassword"class="form-control input-lg" placeholder="Old Password"/>
            </div>
            <div style="margin-top:30px">
              <form role="form" method="POST" action="/api/users/update-password?_method=PUT">
            <fieldset>
              <div class = "form-group">
               
                <input type="password" name="newPassword" id="newPassword"class="form-control input-lg" placeholder="New Password"/>
              </div>
              <div style="margin-top:30px">
                <form role="form" method="POST" action="/api/users/update-password?_method=PUT">
              <fieldset>
                <div class = "form-group">
                  <input type="password" name="repeatNewPassword" id="repeatNewPassword"class="form-control input-lg" placeholder="Repeat New Password"/>
                </div>
                <div class="row">
                  <div class="col-xs-6 col-sm-6 col-md-6">
                    <input
                      type="submit"
                      class="btn btn-lg btn-primary btn-block"
                      value="Change Password"
                    />
                  </div>
                </div>
          </fieldset>
          </form>
          <hr class="colorgraph" />
          </div>
        </div>
      </div>
      <% include ../partials/footer %> 
    </div> 
    <% include ../partials/scripts %>
  </body>
</html>




